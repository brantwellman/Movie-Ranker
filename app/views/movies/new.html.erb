<h1>Enter Your Movie Information</h1>

<div class = "booyah-box col-xs-10 col-xs-offset-1">
	<%= simple_form_for @movie do |f| %>
		<%= f.input :title %>
		<%= f.input :year %>
		<%= f.input :rating %>
		<%= f.input :description %>
		<br />
		<%= f.submit 'Create', :class => 'btn btn-primary' %>
	<% end %>
</div>