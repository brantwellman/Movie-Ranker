<div class = "col-xs-10 col-xs-offset-1">
	<h1>Edit Your List</h1>
	
</div>

<div class = "booyah-box col-xs-10 col-xs-offset-1">	
	<h2>My movies from <%= @list.year %></h2>
	<table class = "table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Rank</th>
				<th>Movie</th>
			</tr>
		</thead>
		<tbody>
			<% @list.movies.reverse.each_with_index do |movie, i| %>
				<tr>
					<td>
						<%= (i+1) %>
					</td>
					<td>
						<%= movie.title %>
					</td>
					<td>
						<%= link_to 'Edit Title', edit_movie_path(movie) %>
					</td>
					<td>
						<%= link_to 'Delete Movie', movie_destroy_path(@list, movie), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this movie?'} %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<br />
	<br />
		<%= simple_form_for @movie, :url => list_movies_path(@list) do |f| %>
			<%= f.input :title %>
			<%= f.submit 'Add a Movie', :class => 'btn btn-primary' %>
			<br />
			<br />
			<%=  %>
			<%= f.submit 'Add a description', :class => 'btn btn-primary' %>
		<% end %>
</div>


